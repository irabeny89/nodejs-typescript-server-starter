{
	"name": "nodejs-typescript-server-starter",
	"version": "0.1.1",
	"description": "A starter repo for a Typescript-Nodejs-Graphql server app.",
	"main": "./dist/index.js",
	"scripts": {
		"prepare": "node no_husky_in_ci.js",
		"prestart": "pnpm compile",
		"predev": "pnpm generate",
		"precompile": "pnpm clean && pnpm generate && pnpm lint && pnpm test & pnpm docs",
		"lint": "eslint src",
		"test": "jest",
		"pentest": "env-cmd pnpm snyk test",
		"clean": "rm -rf dist docs",
		"generate": "graphql-codegen --config codegen.yml",
		"generate:watch": "graphql-codegen -w --config codegen.yml",
		"compile": "tsc",
		"start": "node ./dist/index.js",
		"dev": "tsnd --rs --transpile-only --respawn src/index.ts",
		"docs": "pnpm typedoc --options typedoc.config.cjs"
	},
	"keywords": [
		"Typescript",
		"Nodejs",
		"Expressjs",
		"Starter",
		"Graphql"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@apollo/server": "^4.5.0",
		"@babel/core": ">=7.0.0-beta.0 <8.0.0",
		"@changesets/cli": "^2.26.0",
		"@types/body-parser": "^1.19.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"env-cmd": "^10.1.0",
		"express": "^4.18.2",
		"graphql": "^16.6.0",
		"graphql-tag": "^2.12.6",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.0.3",
		"nodemailer": "^6.9.1"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^4.0.1",
		"@graphql-codegen/typescript": "^3.0.2",
		"@graphql-codegen/typescript-resolvers": "^3.1.1",
		"@jest/globals": "^29.5.0",
		"@types/node": "^18.15.6",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"prettier": "^2.8.7",
		"snyk": "^1.1127.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typedoc": "^0.23.28",
		"typescript": "^5.0.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
